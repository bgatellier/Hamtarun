<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/globalLayout"
  android:layout_width="match_parent"
  android:background="@color/bckgApp"
  android:layout_height="fill_parent">
    <RelativeLayout android:layout_height="wrap_content" android:id="@+id/content" android:layout_width="match_parent">
        <TableLayout android:background="@color/bckgText" android:layout_height="wrap_content" android:id="@+id/display" android:layout_width="fill_parent">
            <ListView android:layout_width="match_parent" android:id="@+id/list_run" android:background="@color/bckgApp" android:layout_height="fill_parent"></ListView>
        </TableLayout>
    </RelativeLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/main_menu" android:layout_alignParentBottom="true">
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Run" android:layout_weight="1" android:background="@drawable/btn_black" android:id="@+id/btn_menu_run" android:enabled="true"></Button>
        <Button android:layout_weight="1" android:layout_width="0dp" android:textColor="#000" android:layout_height="wrap_content" android:text="List of run" android:background="@color/bckgApp" android:id="@+id/btn_menu_listofrun" android:enabled="false"></Button>
        <Button android:text="Settings" android:layout_height="wrap_content" android:layout_width="0dp" android:background="@drawable/btn_black" android:layout_weight="1" android:id="@+id/btn_menu_settings" android:enabled="true"></Button>
    </LinearLayout>
</RelativeLayout>
